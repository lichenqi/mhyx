<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/wchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="微信号"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/wchat"
            android:background="@null"
            android:hint="请输入您的微信号"
            android:textColor="@color/txblack"
            android:textColorHint="@color/txblack"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:lineSpacingExtra="4dp"
        android:text="温馨提示：设置微信号有助您与上级或团队成员沟通交流，经验分享，促进订单成交量。您设置的微信号会展示给您的上级成员和团队成员。如因此涉及到个人隐私，可选择不设置或清空设置。"
        android:textColor="@color/txblack"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/edit_mobile_bg"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>